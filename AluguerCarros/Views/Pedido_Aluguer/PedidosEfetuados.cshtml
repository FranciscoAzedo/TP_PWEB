                @Html.DisplayFor(modelItem => item.dataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if (item.Estado == "Espera de Avaliacao")
                {
                    if (item.aval_Carro == false)
                    {
                        <button onclick="location.href='@Url.Action("Avaliacao_Carro", "Avaliacaos", new { id = item.PedidoID, CarroID = item.CarroID})'">Avaliar Carro</button>
                    }
                    if (item.aval_Dono == false)
                    {
                        <button onclick="location.href='@Url.Action("Avaliacao_Dono", "Avaliacaos", new { id = item.PedidoID, Dono = item.Veiculo.Dono })'">Avaliar Dono</button>
                    }
                }
            </td>
        </tr>
    }

</table>

