@model AluguerCarros.Models.AlugarCarros.PedidosViewModel

@{
    ViewBag.Title = "PedidosEfetuados";
}

<h2>Pedidos Pendentes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Matrícula")
        </th>
        <th>
            @Html.DisplayName("Marca")
        </th>
        <th>
            @Html.DisplayName("Modelo")
        </th>
        <th>
            @Html.DisplayName("Dono")
        </th>

        <th>
            @Html.DisplayName("Data Início")
        </th>
        <th>
            @Html.DisplayName("Data Entrega")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.pedidos_pendentes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Dono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("CancelarPedido", new { id = item.PedidoID})'">Cancelar Pedido</button>
            </td>
        </tr>
    }

</table>

